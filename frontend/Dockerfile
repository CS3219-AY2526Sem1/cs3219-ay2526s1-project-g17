ARG VITE_AUTH0_CLIENT_ID=SGQIr3yGRMXT0F19nQujSFmPQAXLv4QC
ARG VITE_QUEUE_TIMEOUT=300000
ARG VITE_EXEC_BASE=https://execution-service-226307456137.asia-southeast1.run.app
ARG VITE_WS_BASE=https://collaboration-service-226307456137.asia-southeast1.run.app
ARG VITE_HISTORY_SERVICE_BASE=https://history-service-226307456137.asia-southeast1.run.app/history
ARG VITE_ENV=PROD

ENV VITE_AUTH0_CALLBACK_URL=$VITE_AUTH0_CALLBACK_URL
ENV VITE_AUTH0_DOMAIN=$VITE_AUTH0_DOMAIN
ENV VITE_AUTH0_CLIENT_ID=$VITE_AUTH0_CLIENT_ID
ENV VITE_QUEUE_TIMEOUT=$VITE_QUEUE_TIMEOUT
ENV VITE_EXEC_BASE=$VITE_EXEC_BASE
ENV VITE_WS_BASE=$VITE_WS_BASE
ENV VITE_HISTORY_SERVICE_BASE=$VITE_HISTORY_SERVICE_BASE
ENV VITE_ENV=$VITE_ENV

COPY package.json ./
RUN npm install
COPY . .

RUN npm run build
RUN npm install -g serve

EXPOSE $PORT

CMD ["sh", "-c", "serve -s dist -l ${PORT:-5173}"]
