FROM node:22-alpine
LABEL maintainer=ywllowsensor

WORKDIR /app

# Define build arguments
ARG VITE_AUTH0_CALLBACK_URL=http://localhost:5173
ARG VITE_AUTH0_DOMAIN=dev-6hlsv11p2kn5hiej.us.auth0.com
ARG VITE_AUTH0_CLIENT_ID=SGQIr3yGRMXT0F19nQujSFmPQAXLv4QC
ARG VITE_QUEUE_TIMEOUT=300000

ENV VITE_AUTH0_CALLBACK_URL=$VITE_AUTH0_CALLBACK_URL
ENV VITE_AUTH0_DOMAIN=$VITE_AUTH0_DOMAIN
ENV VITE_AUTH0_CLIENT_ID=$VITE_AUTH0_CLIENT_ID
ENV VITE_QUEUE_TIMEOUT=$VITE_QUEUE_TIMEOUT

COPY package.json ./
RUN npm install
COPY . .

RUN npm run build
RUN npm install -g serve

EXPOSE $PORT

CMD ["sh", "-c", "serve -s dist -l ${PORT:-5173}"]